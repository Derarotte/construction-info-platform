{
  "name": "construction-info-platform",
  "private": true,
  "version": "0.1.0",
  "description": "Construction Informatization Integrated Platform (Web + Desktop)",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite",
    "build": "vue-tsc -b && vite build",
    "build:win": "npm run build && electron-builder --win nsis",
    "preview": "vite preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "element-plus": "^2.13.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.25",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^3.1.5"
  },
  "build": {
    "appId": "com.derarotte.construction-info-platform",
    "productName": "施工信息化一体化平台",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
